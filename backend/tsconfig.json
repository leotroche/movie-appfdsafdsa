{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"outDir": "dist",

		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,

		/* Paths */
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": ["src"]
}
